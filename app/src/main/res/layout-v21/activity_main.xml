<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="angelapps.com.tarea2coursera.MainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <android.support.design.widget.TextInputLayout
        android:id="@+id/TILprimerimputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hola"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/TIETprimero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/text_segundo"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/TILprimerimputlayout"
        android:id="@+id/TILsegundoimputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hola x2"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_segundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionDone"
            />



    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha prueba"
        android:id="@+id/botonFecha"
        android:layout_below="@+id/TILsegundoimputlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoVideo"
        android:layout_below="@+id/TILsegundoimputlayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
